.page_size {
    width: 100%;
    height: 100%;
}
.section{
    margin-bottom: 0;
}
.section_gap{
    padding: 10% 30rpx;
    height: 75%;
}
.scroll-view_H{
  white-space: nowrap;
  height: 100%;
}
.scroll-view-item{
  height: 200px;
}
.scroll-view-item_H{
    display:inline-block;
    width:90%;
    height:100%;
    border-radius:24rpx;
    margin:0 5px;
}
.flex-wrp{
  height: 100%;
  flex-direction:column;
}
.flex-item {
  display: block;
}
.flex-item-top{
    position: relative;
    height: 60%;
    background: #C9C9C9;
    border-top-left-radius:24rpx;
    border-top-right-radius:24rpx;
    justify-content:center;
    align-items:center;
}
.flex-item-top image {
    display:block;
    height:250rpx;
    width:430rpx;
    overflow:unset;
    position:absolute;
    top:30%;
    left:15%;
}
.flex-item-bottom{
    height: 40%;
    background: #FFF;
    border-bottom-left-radius:24rpx;
    border-bottom-right-radius:24rpx;
}
.item-body{
    display: flex;
    height: 100%;
    padding: 0 20px;
    flex-direction: column;
    /*justify-content:space-between;*/
    /*align-items:center;*/
}
.carName {
    font-size: 16px;
    font-weight: bold;
    color: #000;
    margin-top: 40rpx;
}
.price, .detail {
    margin-top: 10rpx;
    font-size: 12px;
    color: #333;
}
.detail {
    margin-top: 30rpx;
}
.item-body button {
    width: 100%;
    margin-top: 10%;
    color: #FFF;
    background-color: #FF9801;
}
.item-body button::after {
    border: none;
}