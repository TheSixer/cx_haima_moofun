.body {
    height: 100%;
    width: 100%;
}
.body .body-top{
    display: flex;
    align-items: center;
    height: 100rpx;
    background-color: #338EE3;
    padding: 0 32rpx;
}
.body-top .choose-city{
    display: flex;
    align-items: center;
    height: 100%;
    width: 20%;
    color: #FFFFFF;
}
.body-top .search-city{
    display: flex;
    align-items: center;
    width: 60%;
    font-size: 12px;
    background-color: #FFFFFF;
    color: #9B9B9B;
    border-radius:40rpx; 
    margin-left: 20rpx;
}
.body-top .search-city .input{
    padding: 10rpx 20rpx;
}
.sort {
    display: flex;
    height: 46px;
}
.sort-button {
    width: 33.33333%;
    height: 46px;
    justify-content:center;
    align-items:center;
}
.sort-button button {
    height: 92rpx;
    padding: 6rpx 0;
    line-height: 76rpx;
    font-size: 32rpx;
    background: #fff;
    color: #000;
    border-radius: 0;
    border-right: 2rpx solid #EBEBEB;
    border-bottom: 2rpx solid #EBEBEB;
}
.sort-button button:after {
    content: none;
}
.sort-button button.selected {
    color: #FF9801;
    border-bottom: 4rpx solid #FF9801;
}
.widgets {
  background: #ffffff;
}
.widget{
    position: relative;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    padding-left: 240rpx;
    padding-right: 40rpx;
}
.widget_icon {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 30rpx;
  left: 30rpx;
  border-radius: 8rpx;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 30rpx;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #EBEBEB;
}
/*.widget__line_first{
    left: 0;
    right: 0;
    background-color: #D8D8D8;
}*/
.widget_info {
    display: flex;
    height: 200rpx;
    flex-direction:column;
    padding-left:10rpx;
}
.widget_info .imgList {
    padding-top: 25rpx;
    padding-bottom: 15rpx;
    vertical-align: bottom;
}
.imgList image {
    width: 160rpx;
    height: 28rpx;
    vertical-align: bottom;
}
.imgList text {
    display:inline-block;
    font-size:20rpx;
    padding:0 6rpx;
    color:#FFF;
    border-radius:5rpx;
    margin-left:10rpx;
    height:28rpx;
    line-height: 28rpx;
}
.imgList .blue {
    background: #338FFD;
}
.imgList .orange {
    background: #ffa500;
}
.imgList .order_num {
    display:inline-block;
    color:#9B9B9B;
    font-size:20rpx;
    margin:10rpx 0 0;
    float: right;
}
.buyCar {
    position:absolute;
    top:30rpx;
    left:40rpx;
    width:54rpx;
    height:60rpx;
}
.name {
    display: flex;
    padding:5rpx 0 0;
    font-size: 32rpx;
    font-weight: bold;
    color: #000;
    /*height: 80rpx;*/
}
.name .km {
    flex-grow: 1;
    text-align: right;
}
.km text {
    color: #FF9801;
    font-size: 24rpx;
    font-weight: normal;
}
.address {
    font-size: 28rpx;
    color: #666;
    white-space: nowrap;
    overflow: hidden;
    text-overflow:ellipsis;
}
