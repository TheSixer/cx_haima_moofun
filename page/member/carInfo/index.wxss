/* page/mine/carInfo/index.wxss */
.body {
    padding: 30rpx;
}

.section{
    margin-bottom: 0;
}
.section_gap{
    padding: 10% 30rpx;
    height: 75%;
}
.scroll-view_H{
  white-space: nowrap;
  height: 100%;
}
.scroll-view-item{
  height: 200px;
}
.scroll-view-item_H{
    display:inline-block;
    width:90%;
    height:100%;
    border-radius:24rpx;
    margin:0 5px;
}
.flex-wrp{
  height: 1000rpx;
  display:flex;
  background-color: #FFFFFF;
  flex-direction:column;
  border-radius:40rpx;
}
.flex-item{
  height: 500rpx;
  padding: 40rpx 40rpx 0;
  color: #FFFFFF;
  display: flex;
  align-items:center;
}
.flex-item:first-child {
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;
}
.flex-item:last-child {
    border-bottom-left-radius: 40rpx;
    border-bottom-right-radius: 40rpx;
}
.flex-wrp-child{
  display:flex;
  width: 100%;
  background-color: #FFFFFF;
  flex-direction:column;
  justify-content: space-between;
}
.flex-item-child{
  color: #333;
  display: flex;
  line-height: 45px;
}
.child-left {
  width: 180rpx;
  color: #333;
}
.child-right{
  display: block;
  flex-grow: 1;
  text-align: right;
  color: #000;
}
.car {
  width:200px;
  /*height:120px;*/
  height: 340rpx;
  margin-top:20px;
}
.flex-bt{
  display: flex;
  justify-content: center;
  width:100%;
  height:80px;
  margin-top:20px;

}
.flex-it{
  width:33.3333%;
  height:80px;
  color:#000;
  display:flex;
  text-align: center;
  justify-content:center;
  align-items:center;
  flex-direction:column;
}
.flex-it-bottom {
  font-weight: bold;
}
