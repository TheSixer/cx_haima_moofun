.body {
    height: 100%;
    width: 100%;
}
.section{
    padding: 0 15px;
}
.section textarea{
    width:100%;
    height:300px;
    border:1px solid #EDEDED;
    margin-top:10px;
    padding:10px;
    box-sizing:border-box;
    border-radius:6px;
    background:#fff;
}
.section button{
    margin-top: 15px;
}
.footer{
    position: fixed;
    bottom: 20px;
    text-align: center;
    color: #B7B7B7;
    width: 100%;
}
.submit {
    color: #FFF;
    background: #FF9801;
}
.submit[disabled] {
    color: #FFF !important;
    background: rgba(255, 152, 1, 100) !important;
}