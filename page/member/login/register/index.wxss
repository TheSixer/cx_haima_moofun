/* app/register/index.wxss */
.get-code-in {
    height: 1.7rem;
    line-height: 1.7rem;
    font-size: 24rpx;
    background-color: #FF9801;
    color: #FFFFFF;
    /*appearance: button;
    -moz-appearance: button;
    -webkit-appearance: button;*/
    width: 60%;
}
.page-body-wrapper {
    margin-top: 60rpx;
}
.page-body-form {
    margin: 40rpx 20rpx;
    border-radius: 12rpx;
}
.page-body-button {
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    border-radius:4rpx;
    background-color:#FF9801;
}
.get-code-in[disabled]{
    background-color: #B7B7B7 !important;
    color: #FFFFFF !important;
}
.page-body-form-item{
    align-items: center;
}
.page-body-form-item input{
    border-bottom:rpx solid #eee;
    margin-left: 10rpx;
    width: 100%;
}
.page-body-button[disabled] {
    background-color: #FF9801 !important;
    color: #FFFFFF !important;
}
.page-body-form .get-code{
    display: flex;
    align-items: center;
    width:100%;
}
.page-body-form .get-code input{
    border: none;
}
.page-body-form-item image{
    width: 32rpx;
    height: 32rpx;
}
.page-body-form-item .eye{
    height:24rpx;
    width:36rpx;
}
.choose-type {
    display: flex;
    align-items: center;
    color: #FF9801;
    font-size: 28rpx;
    margin: 0 40rpx;
}
.choose-type checkbox{
    margin-right: 40rpx;
}
.footer {
    text-align: center;
}
.footer text{
    font-size:12px;
}
.footer .footer-one{
    color: #9D9D9D;
}
.footer .footer-two{
    color: #FF9801;
}
.choose-type1{
    justify-content: flex-end;
}
.footer-tips{
    position: absolute;
    bottom: 50rpx;
    text-align: center;
    font-size:16px;
    color:#9B9B9B;
    width: 100%;
}
.footer-tips .found{
    color: #FF9801;
}